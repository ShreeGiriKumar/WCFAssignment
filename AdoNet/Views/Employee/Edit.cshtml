@model AdoNet.Models.Employee
@{
    ViewBag.Title = "Edit";
}

<div class="jumbotron">
    <h4>Update Employee - Services</h4>
</div>

<span class="label label-success">@ViewBag.Result</span>

<fieldset>
    <legend>Employee Info</legend>
    @using (Html.BeginForm("Edit", "Employee", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.EmployeeID, new { @class = "control-label col-sm-2", @for = "EmployeeID" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.EmployeeID, new { @class = "form-control", @placeholder = "Enter Employee Id", @type = "number", @readonly = "readonly" })                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.EmployeeFirstName, new { @class = "control-label col-sm-2", @for = "EmployeeFirstName" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.EmployeeFirstName, new { @class = "form-control", @placeholder = "Enter Employee First Name" })
                @Html.ValidationMessageFor(m => m.EmployeeFirstName, "", new { @class = "label label-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.EmployeeLastName, new { @class = "control-label col-sm-2", @for = "EmployeeLastName" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.EmployeeLastName, new { @class = "form-control", @placeholder = "Enter Employee Last Name" })
                @Html.ValidationMessageFor(m => m.EmployeeLastName, "", new { @class = "label label-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DepartmentID, new { @class = "control-label col-sm-2", @for = "DepartmentID" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.DepartmentID, new { @class = "form-control", @placeholder = "Enter Department Id" })
                @Html.ValidationMessageFor(m => m.DepartmentID, "", new { @class = "label label-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Update Employee" class="btn btn-primary" />
                @Html.ActionLink("Go Back", "Index", "Employee", new { @class = "btn btn-secondary" })
            </div>
        </div>
    }
</fieldset>