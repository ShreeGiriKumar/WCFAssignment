@model IEnumerable<AdoNet.Models.ProductDetails>

@{
    ViewBag.Title = "Product Details Page";
}

<div class="jumbotron">
    <h1>Product Details</h1>
</div>

<div class="row">
    <div class="col-md-8">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Product ID
                    </th>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Supplier ID
                    </th>
                    <th>
                        Operation
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>
                            @product.ProductId
                        </td>
                        <td>
                            @product.ProductName
                        </td>
                        <td>
                            @product.SupplierId
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Product", new { productId = @product.ProductId }, new { @class = "btn-info" })                            
                            @Html.ActionLink("Delete", "Delete", "Product", new { productId = @product.ProductId }, new { @class = "btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4">
                        @Html.ActionLink("Add Product", "Add", "Product", new { @class = "btn-primary" })
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>