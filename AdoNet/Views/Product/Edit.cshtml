@model AdoNet.Models.ProductDetails
@{
    ViewBag.Title = "Edit";
}

<div class="jumbotron">
    <h4>Update Product</h4>
</div>

<span class="label label-success">@ViewBag.Result</span>

<fieldset>
    <legend>Category Info</legend>
    @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { @class = "form-horizontal" }))
    {

        <div class="form-group">
            @Html.LabelFor(m => m.ProductId, new { @class = "control-label col-sm-2", @for = "ProductId" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.ProductId, new { @class = "form-control", @placeholder = "Enter Product Id" })
                @Html.ValidationMessageFor(m => m.ProductId, "", new { @class = "label label-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ProductName, new { @class = "control-label col-sm-2", @for = "ProductName" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", @placeholder = "Enter Product Name" })
                @Html.ValidationMessageFor(m => m.ProductName, "", new { @class = "label label-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.SupplierId, new { @class = "control-label col-sm-2", @for = "SupplierId" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.SupplierId, new { @class = "form-control", @placeholder = "Enter Supplier Id" })
                @Html.ValidationMessageFor(m => m.SupplierId, "", new { @class = "label label-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Update Product" class="btn btn-primary" />
                @Html.ActionLink("Go Back", "Index", "Product", new { @class = "btn btn-secondary" })
            </div>
        </div>
    }
</fieldset>