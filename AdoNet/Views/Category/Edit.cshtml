@model AdoNet.Models.Category
@{
    ViewBag.Title = "Edit";
}

<div class="jumbotron">
    <h4>Update Category</h4>
</div>

<span class="label label-success">@ViewBag.Result</span>

<fieldset>
    <legend>Category Info</legend>
    @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.SupplierId, new { @class = "control-label col-sm-2", @for = "SupplierId" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.SupplierId, new { @class = "form-control", @placeholder = "Enter Supplier Id", @readonly="readonly" })                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.SupplierName, new { @class = "control-label col-sm-2", @for = "SupplierName" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.SupplierName, new { @class = "form-control", @placeholder = "Enter Supplier Name", @readonly = "readonly" })                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.CategoryCode, new { @class = "control-label col-sm-2", @for = "CategoryCode" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.CategoryCode, new { @class = "form-control", @placeholder = "Enter Category Code" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.CategoryName, new { @class = "control-label col-sm-2", @for = "CategoryName" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control", @placeholder = "Enter Category Name" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Division, new { @class = "control-label col-sm-2", @for = "Division" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Division, new { @class = "form-control", @placeholder = "Enter Division" })                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Region, new { @class = "control-label col-sm-2", @for = "Region" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Region, new { @class = "form-control", @placeholder = "Enter Region" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Update Category" class="btn btn-primary" />
                @Html.ActionLink("Go Back", "Index", "Category", new { @class = "btn btn-secondary" })
            </div>
        </div>
        @Html.Hidden("hdnCategoryCode", (int)ViewBag.OldCategoryCode)
    }
</fieldset>
